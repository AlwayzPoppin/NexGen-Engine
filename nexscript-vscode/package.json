{
    "name": "nexscript-vscode",
    "displayName": "NexScript Language Support",
    "description": "Syntax highlighting and support for the NexScript game language.",
    "version": "0.1.0",
    "publisher": "NexGen",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "nexscript",
                "aliases": [
                    "NexScript",
                    "nexscript"
                ],
                "extensions": [
                    ".nx"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "nexscript",
                "scopeName": "source.nx",
                "path": "./syntaxes/nexscript.tmLanguage.json"
            }
        ]
    }
}